{
  "name": "personal",
  "version": "0.0.1",
  "description": "Personal website for James Carr",
  "author": "James Carr <james@jamescarr.dev>",
  "repository": "https://github.com/jamesacarr/personal",
  "homepage": "https://jamescarr.dev",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "dev": "now dev",
    "dev:next": "next",
    "lint": "xo --fix",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "now-build": "next build",
    "test": "jest",
    "test:ci": "jest --ci --reports=default --reporters=jest-junit",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts?(x)}": [
      "yarn lint"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/__mocks__/**",
      "!**/node_modules/**",
      "!coverage/**",
      "!.next/**",
      "!.now/**"
    ],
    "coverageDirectory": "coverage",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "preset": "ts-jest"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "./test-results.xml"
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "extends": [
      "xo-react"
    ],
    "env": [
      "browser",
      "es6",
      "jest",
      "node"
    ],
    "rules": {
      "@typescript-eslint/prefer-readonly-parameter-types": 0,
      "react/jsx-fragments": [
        "error",
        "element"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx"
        ],
        "rules": {
          "react/prop-types": 0
        }
      }
    ]
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@emotion/core": "^10.0.10",
    "@material-ui/core": "^4.1.3",
    "@slack/webhook": "^5.0.3",
    "axios": "^0.19.0",
    "formik": "^2.0.8",
    "http-status-codes": "^1.4.0",
    "mdi-react": "^7.0.0",
    "next": "^9.0.0",
    "notistack": "^0.9.2",
    "qs": "^6.9.3",
    "react": "^16.8.6",
    "react-dom": "^16.7.0",
    "react-ga": "^2.7.0",
    "yup": "^0.28.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/qs": "^6.9.1",
    "@types/react": "^16.8.22",
    "@types/yup": "^0.26.26",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.1",
    "jest": "^25.3.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.4",
    "node-mocks-http": "^1.8.1",
    "ts-jest": "^25.3.1",
    "typescript": "^3.5.2",
    "xo": "^0.29.1"
  }
}
