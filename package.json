{
  "name": "personal",
  "version": "0.0.1",
  "description": "Personal website for James Carr",
  "author": "James Carr <james@jamescarr.dev>",
  "repository": "https://github.com/jamesacarr/personal",
  "homepage": "https://jamescarr.dev",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "now dev",
    "dev:next": "next",
    "metrics": "xo --fix",
    "now-build": "next build && next export -o dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts?(x)}": [
      "yarn metrics",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "extends": [
      "xo-typescript",
      "xo-react"
    ],
    "extensions": [
      "ts"
    ],
    "env": [
      "browser",
      "es6",
      "jest",
      "node"
    ],
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "react/prop-types": 0
    }
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@emotion/core": "^10.0.10",
    "@material-ui/core": "^4.1.3",
    "@zeit/next-typescript": "^1.1.1",
    "axios": "^0.19.0",
    "emotion-theming": "^10.0.10",
    "formik": "^1.5.7",
    "mdi-react": "^5.4.0",
    "next": "^8.1.0",
    "notistack": "^0.8.8",
    "react": "^16.8.6",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "@types/next": "^8.0.5",
    "@types/react": "^16.8.22",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.0",
    "typescript": "^3.5.2",
    "xo": "^0.24.0"
  }
}
