{
  "name": "personal",
  "version": "0.0.1",
  "description": "Personal website for James Carr",
  "author": "James Carr <james@jamescarr.dev>",
  "repository": "https://github.com/jamesacarr/personal",
  "homepage": "https://jamescarr.dev",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "dev": "next",
    "lint": "xo --fix",
    "lint:ci": "xo --reporter @jamesacarr/github-actions",
    "typecheck": "tsc -p ./tsconfig.json",
    "test": "jest",
    "test:ci": "jest --ci --testLocationInResults --reporters=@jamesacarr/jest-reporter-github-actions",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts?(x)}": [
      "yarn lint"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/__mocks__/**",
      "!**/node_modules/**",
      "!coverage/**",
      "!.next/**",
      "!.now/**"
    ],
    "coverageDirectory": "coverage",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "preset": "ts-jest"
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "extends": [
      "xo-react"
    ],
    "env": [
      "browser",
      "es6",
      "jest",
      "node"
    ],
    "rules": {
      "@typescript-eslint/prefer-readonly-parameter-types": 0,
      "react/jsx-fragments": [
        "error",
        "element"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx"
        ],
        "rules": {
          "react/prop-types": 0
        }
      }
    ]
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@emotion/react": "^11.1.4",
    "@material-ui/core": "^4.9.12",
    "@slack/webhook": "^6.0.0",
    "axios": "^0.21.1",
    "formik": "^2.0.8",
    "http-status-codes": "^2.1.4",
    "mdi-react": "^7.0.0",
    "next": "^10.0.5",
    "notistack": "^1.0.3",
    "qs": "^6.9.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-ga": "^3.3.0",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.1.2",
    "@jamesacarr/eslint-formatter-github-actions": "^0.0.2",
    "@jamesacarr/jest-reporter-github-actions": "^0.0.3",
    "@types/jest": "^26.0.20",
    "@types/qs": "^6.9.1",
    "@types/react": "^17.0.0",
    "@types/yup": "^0.29.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.1",
    "jest": "^26.0.1",
    "lint-staged": "^10.0.4",
    "node-mocks-http": "^1.8.1",
    "ts-jest": "^26.1.0",
    "typescript": "^4.1.3",
    "xo": "^0.37.1"
  }
}
